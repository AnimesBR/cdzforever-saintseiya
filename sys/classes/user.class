alias user.lutas.limit {
  var %l = $user.lutas($iif($1,$1,$nick)), %limit = $ctime - 1209600, %lutas = 0
  while (%l) {
    if ($gettok($gettok(%l,1,44),1,32) > %limit) inc %lutas
    %l = $deltok(%l,1,44)
