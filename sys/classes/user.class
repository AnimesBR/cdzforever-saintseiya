alias dados { 
  if !$2 { return users/ $+ $1 $+ .ini } 
  if !$3 { return $readini(users/ $+ $1 $+ .ini,$1,$2) }
  return $readini(users/ $+ $1 $+ .ini,$2,$3)
}

alias oper {
  if (!$1) return $dados($nick,oper,lvl)
  if (!$2) return $dados($nick,oper,$1)
  return $dados($1,oper,$2)
}

