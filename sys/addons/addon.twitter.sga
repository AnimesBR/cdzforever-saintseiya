;; --------------------------------------------------------------------------------------------- COMANDOS

alias com_@twit {
  if ($1 == post) {
    var %msg = $2- ( $+ $nick $+ )
    if ($len(%msg) <= 140) twit.post %msg
  }
}

;; --------------------------------------------------------------------------------------------- HANDLERS

on *:input:*:{
  tokenize 32 $1-
  if ($isalias($+(com_,$1))) $+(com_,$1) $2-
}
off *:text:*:*:{
  tokenize 32 $1-
  if ($isalias($+(com_,$1))) $+(com_,$1) $2-
}

