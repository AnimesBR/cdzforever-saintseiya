alias com_chan_!silenciar {
  op.check @
  if ($me !isop #) return
  if (!$1 || $1 !ison #) return
  mode # +b-vhoa $1 $1 $1 $1 $1
  msgto # 08 $+ $1 15foi silenciado.
  msgto $1 Voc√™ foi "0silenciado15" no08 $chan 15por09 $nick $+ 15. $iif($2,Motivo:0 $2- $+ 15.) Quando voc√™ quiser falar novamente, digite 11!Voltei 15aqui no 0PVT 15do bot.
  hadd -m sys.silenciados $1 $addtok($hget(sys.silenciados,$1),$chan,44)
}
alias com_pvt_!voltei {
  var %c = $hget(sys.silenciados,$nick)
  if (!%c) return
  while (%c) {
    mode $gettok(%c,1,44) -b $nick
    %c = $deltok(%c,1,44)
  }
  hdel sys.silenciados $nick
  msgto $nick 15Voc√™ recuperou a 8voz 14:)
}



