    op.check $replace($1,!op,@,!deop,@,!voice,+,!devoice,+)
    tokenize 32 $strip($1-)
    var %mode.p = $replace($1,!op,rv,!voice,r,!deop,o,!devoice,v)
    var %mode.s = $replace($1,!op,+,!voice,+,!deop,-,!devoice,-)
