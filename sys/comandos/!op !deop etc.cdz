      if $numtok(%mode.ok,32) = 6 { mode %chan $+(%mode.s,$str(%mode,6)) %mode.ok | var %mode.ok }
      dec %x
    }
    if %mode.ok { mode %chan $+(%mode.s,$str(%mode,6)) %mode.ok }
  }
  if $strip($1) == !moderar {
    op.check @
    if $me !isop $iif($chan,$chan,$strip($2)) { .notice $nick $c1 4Erro: 15Eu n√£o sou 0OPerador15 do, ou n√£o estou no canal 09 $+ %chan $+ 14. $c2 | halt }
